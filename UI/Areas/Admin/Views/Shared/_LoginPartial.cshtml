<link rel="stylesheet" href="css/signin.css" asp-append-version="true" type="text/css" />

<div class="text-center">
	<form class="form-signin" method="post" asp-antiforgery="true" asp-area="Admin" asp-action="Login" asp-controller="Users" asp-route-returnUrl="@Model?.ReturnUrl">
		<img class="mb-4" src="~/images/logo.png" alt="" height="72">
		<h1 class="h3 mb-3 font-weight-normal">Авторизация</h1>
		<label for="inputEmail" class="sr-only">Email</label>
		<input type="email" asp-for="Email" id="inputEmail" class="form-control" placeholder="Электронная почта" required autofocus>
		<label for="inputPassword" class="sr-only">Пароль</label>
		<input type="password" asp-for="Password" id="inputPassword" class="form-control" placeholder="Пароль" required>
		<div class="checkbox mb-3">
			<label>
				<input type="checkbox" asp-for="RememberMe" value="remember-me"> Запомнить меня
			</label>
		</div>
		<button class="btn btn-lg btn-primary btn-block" type="submit">Войти</button>
		<p class="mt-5 mb-3 text-muted">&copy; @DateTime.Now.Year</p>
	</form>
</div>
