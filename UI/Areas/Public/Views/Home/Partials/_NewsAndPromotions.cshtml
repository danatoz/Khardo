<div class="tpl23-news">
    <div class="tpl23-container">

        <div class="tpl23-box-title-link">
            <h2 class="tpl23-box-title">Новости и акции</h2>
            <a asp-controller="News" asp-action="Index" asp-area="Public">Смотреть все</a>
        </div>

        <div class="tpl23-news-wrapper" id="app">
            <div class="row" >

                <div class="col-12 col-sm-6 col-md-6 col-lg-3" v-for="item in news" v-bind:key="item.id">
                    <div class="tpl23-news-item">
                        <div class="tpl23-news-date">{{item.publicationDate}}</div>
                        <div class="tpl23-news-title">{{item.title}}</div>
                        <div class="tpl23-news-content">
                            {{item.content}}
                        </div>
                        <a class="tpl23-news-more" v-bind:href="'news/details/' + item.id">Подробнее</a>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>

